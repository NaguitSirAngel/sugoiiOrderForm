<body>
  <div class="container">
    <img src="/public/css/assets/logo.jpg" width="100px">
    <br>
    <div class="wrapper animated bounceInLeft">
      <div class="company-info">
        <h3>Contact</h3>
        <ul>
          <li><i class="fa fa-road"></i> Pampanga</li>
          <li><i class="fa fa-phone"></i> +63 921 042 6829</li>
          <li><i class="fa fa-envelope"></i> sugoii@gmail.com</li>
        </ul>
      </div>
      <div class="contact">
        <h3>Order Here</h3>
        <p style="color: #d5302e;">{{msg}}</p>
        <form method="POST" action="send">
          <p>
            <label>Name</label>
            <input class="input" type="text" name="name" required>
          </p>
          <p>
            <label>Address</label>
            <input class="input" type="text" name="address" required>
          </p>
          <p>
            <label>Email Address</label>
            <input class="input" type="email" name="email" required>
          </p>
          <p>
            <label>Phone Number</label>
            <input class="input" type="text" name="phone" required>
          </p>
          <p>
            <label>Mode of payment</label>
            <select id="cars" name="modePmt">
              <option value="BDO">BDO</option>
              <option value="BPI">BPI</option>
              <option value="other">other</option>
            </select>
          </p>
          <p>
            <label>Pickup Point</label>
            <input class="input" type="text" name="pickupPoint" required>
          </p>
          <p>
            Pork Gimbap <input style="width: auto;" type="checkbox" name="porkGimbap"> 
            <br> Qty <input min="1" class="number" type="number" name="porkQty"> 
          </p>
            <p>
            Vegan Gimbap <input style="width: auto;" type="checkbox" name="veganGimbap"> 
            <br> Qty <input min="1" class="number" type="number" name="veganQty"> 
          </p>
          <p class="full">
            <label>Instructions (Optional)</label>
            <textarea name="instructions" rows="5"></textarea>
          </p>
          <p class="full">
            <button type="submit">Submit</button>
          </p>
        </form>
      </div>
    </div>
  </div>

</body>